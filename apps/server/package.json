{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:start": "docker compose up -d",
    "db:watch": "docker compose up",
    "db:stop": "docker compose stop",
    "db:down": "docker compose down"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "zod": "^4.0.2",
    "@orpc/server": "^1.8.6",
    "@orpc/client": "^1.8.6",
    "@orpc/openapi": "^1.8.6",
    "@orpc/zod": "^1.8.6",
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.44.2",
    "pg": "^8.14.1",
    "better-auth": "^1.3.9",
    "@better-auth/expo": "^1.3.9"
  },
  "devDependencies": {
    "tsdown": "^0.14.1",
    "typescript": "^5.8.2",
    "@types/express": "^5.0.1",
    "@types/cors": "^2.8.17",
    "tsx": "^4.19.2",
    "@types/node": "^22.13.11",
    "drizzle-kit": "^0.31.2",
    "@types/pg": "^8.11.11"
  }
}
